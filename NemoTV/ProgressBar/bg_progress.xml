<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval"
            android:thicknessRatio="5"
            android:useLevel="false">
            <solid android:color="#FF032b39" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape
            android:shape="ring"
            android:useLevel="false"
            android:innerRadiusRatio="2.4"
            android:thicknessRatio="12.8">
            <solid android:color="#FF02161e" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate android:fromDegrees="270" android:toDegrees="270">
            <shape
                android:innerRadiusRatio="2.4"
                android:shape="ring"
                android:thicknessRatio="12">
                <solid android:color="#FF0fc3d0" />
            </shape>
        </rotate>
    </item>

</layer-list>