<resources>

    <attr name="mapMarkerDefColor" format="color" />
    <attr name="mapMarkerFavColor" format="color" />
    <attr name="mapMarkerSelColor" format="color" />

    <!-- The "Green" theme -->
    <style name="GreenTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/greenPrimaryDark</item>
        <item name="android:colorPrimaryDark">@color/greenPrimaryDark</item>
        <item name="android:colorAccent">@color/greenAccent</item>
        <item name="android:windowBackground">@color/greenWindowBackground</item>
        <item name="android:textColorPrimary">@color/greenTextPrimary</item>
        <item name="android:textColorSecondary">@color/greenTextSecondary</item>
        <item name="infoCardStyle">@style/Widget.InfoCard</item>
        <item name="mapMarkerDefColor">?android:colorPrimaryDark</item>
        <item name="mapMarkerFavColor">@color/greenMarkerFav</item>
        <item name="mapMarkerSelColor">?android:colorAccent</item>
    </style>

    <!-- Base app theme for Activities without action bar -->
    <style name="GreenTheme.NoActionBar" parent="GreenTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="infoCardStyle">@style/Widget.InfoCard</item>
        <item name="mapMarkerDefColor">?android:colorPrimaryDark</item>
        <item name="mapMarkerFavColor">?android:colorPrimary</item>
        <item name="mapMarkerSelColor">?android:colorAccent</item>
    </style>

    <!-- Base app theme for Activities without action bar -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppButton" >
        <item name="android:textColor">?android:colorPrimaryDark</item>
    </style>

</resources>
